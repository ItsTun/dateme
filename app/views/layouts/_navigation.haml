.header-transparent
  .row
    .col-xl-12.col-lg-12.col-md-12.col-sm-12.col-12
      %nav.navbar.navbar-expand-sm.scrolling-navbar.py-0.py-md-0
        .navbar-brand
          %h2.bold.mt-2
            = link_to 'Date Me', root_path
        %button.navbar-toggler.collapsed{"aria-controls" => "navbar-transparent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbar-transparent", "data-toggle" => "collapse", :type => "button"}
          %span.icon-bar.top-bar.mt-0
          %span.icon-bar.middle-bar
          %span.icon-bar.bottom-bar
        #navbar-transparent.collapse.navbar-collapse
          %ul.navbar-nav.ml-auto.mt-2.mt-lg-0.mr-3
            %li.mr-3.mt-3
              %h4
                = link_to 'LADIES', personals_path(ladies: true)
            %li.mr-3.mt-3
              %h4
                = link_to 'MEN', personals_path(men: true)
            %li.mr-3.mt-3
              %h4
                = link_to 'JOIN US', new_personal_path
            - if user_signed_in? && current_user.personals.present?
              %li.mr-3.mt-3
                %h4
                  = link_to 'PROFILE', personal_path(current_user.personals.first.id)
            - if !user_signed_in?
              %li.mr-3.mt-3
                %h4
                  = link_to 'SIGN IN/SIGN UP',new_user_session_path
            - else
              %li.mr-3.mt-3
                %h4
                  = link_to 'SIGN OUT', destroy_user_session_path(), method: :delete
            %li.mr-3.mt-3
              %h4 ABOUT US
            %li.mt-3
              %h4 CONTACT US
